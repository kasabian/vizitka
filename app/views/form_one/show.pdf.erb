 <div class = "head_table">
  <h3>Section 1. Contact information</h3>
 </div>
 <div class = "pdf_fild">
    <table>
      <tr>
        <td>
          <b>Your name:</b>
        </td>
        <td>
          <%= @customer.name %>
        </td>
      </tr>
      
      <tr>
        <td>
          <b>Method of communication 1:</b>
        </td>
        <td>          
          <%= @customer.tel1 %>;
          <%= @customer.mail1 %>
        </td>
      </tr>
      
      <tr>
        <td>
          <b>Method of communication 2:</b>
        </td>
        <td>          
          <%= @customer.tel2 %>;
          <%= @customer.mail2 %>
        </td>
      </tr>
      
      <tr>
        <td>
          <b>Object address:</b>
        </td>
        <td>          
          <%= @customer.address%>
        </td>
      </tr>
      
      <tr>
        <td>
          <b>The short name of the object: </b>
        </td>
        <td>          
          <%= @customer.short_title%>
        </td>
      </tr>
    </table>
 
 </div>
 
